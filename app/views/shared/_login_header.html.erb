<header class="flex h-16 items-center justify-between bg-customred text-white">
  <div class="text-2xl font-bold ml-6">
    <%= link_to t('header.title'), root_path, class: 'text-xl font-bold hover:text-gray-400' %>
  </div>

  <div class="md:flex text-base space-x-6 mx-6">
    <%= link_to t('header.search'), posts_path, class: 'hover:text-gray-400' %>
    <%= link_to t('header.new_post'), new_post_path, class: 'hover:text-gray-400' %>

    <details class="relative inline-block text-white">
      <summary class="cursor-pointer outline-none list-none hover:text-gray-400">Myメニュー</summary>
      <ul class="bg-customred rounded-t-none w-44 absolute right-0 sm:right-auto z-10 mt-3 py-2 shadow-lg">
        <%= link_to 'プロフィール', profile_path, class: 'block px-4 py-2 hover:bg-gray-600' %>
        <%= link_to '投稿一覧', '#', class: 'block px-4 py-2 hover:bg-gray-600' %>
        <%= link_to 'お気に入り', '#', class: 'block px-4 py-2 hover:bg-gray-600' %>
        <%= link_to 'メールアドレス変更', '#', class: 'block px-4 py-2 hover:bg-gray-600' %>
        <%= link_to 'パスワード変更', '#', class: 'block px-4 py-2 hover:bg-gray-600' %>
      </ul>
    </details>
    <%= link_to t('header.logout'), logout_path, data: { turbo_method: :delete }, class: 'hover:text-gray-400'%>
  </div>
</header>