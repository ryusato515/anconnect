<div class="bg-red-50 py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl"><%= t('.title') %></h2>

    <%= form_with model: @user, url: login_path, class: 'mx-auto max-w-lg rounded-lg border bg-white' do |f| %>
      <div class="flex flex-col gap-4 p-4 md:p-8">
        <div>
          <%= f.label :email, t('.email'), class: 'mb-2 inline-block text-sm text-gray-800 sm:text-base' %>
          <%= f.email_field :email, class: 'w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-customorange ring-opacity-40 transition duration-100 focus:ring', autocomplete: "email" %>
        </div>

        <div>
          <%= f.label :password, t('.password'), class: 'mb-2 inline-block text-sm text-gray-800 sm:text-base' %>
          <%= f.password_field :password, class: 'w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-customorange ring-opacity-40 transition duration-100 focus:ring', autocomplete: "current-password" %>
        </div>

        <%= f.submit t('.login'), class: 'block rounded-lg bg-customred px-8 py-3 mt-3 text-center font-semibold text-white outline-none ring-gray-300 transition duration-100 hover:bg-gray-700 focus-visible:ring active:bg-gray-600 md:text-base' %>
        <div class="flex items-center">
          <hr class="flex-grow border-t border-gray-300">
          <span class="mx-6 text-gray-400 text-sm">または</span>
          <hr class="flex-grow border-t border-gray-300">
        </div>
        <%= link_to auth_at_provider_path(provider: :google), class: "group flex items-center justify-center w-full px-4 py-3 text-base font-semibold text-gray-800 border border-gray-300 rounded-lg" do %>
          <svg class="w-5 h-5 mr-3 transition duration-200 group-hover:text-gray-800" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M23.7449 12.27C23.7449 11.48 23.6749 10.73 23.5549 10H12.2549V14.51H18.7249C18.4349 15.99 17.5849 17.24 16.3249 18.09V21.09H20.1849C22.4449 19 23.7449 15.92 23.7449 12.27Z" fill="#4285F4" />
            <path d="M12.2549 24C15.4949 24 18.2049 22.92 20.1849 21.09L16.3249 18.09C15.2449 18.81 13.8749 19.25 12.2549 19.25C9.12492 19.25 6.47492 17.14 5.52492 14.29H1.54492V17.38C3.51492 21.3 7.56492 24 12.2549 24Z" fill="#34A853" />
            <path d="M5.52488 14.29C5.27488 13.57 5.14488 12.8 5.14488 12C5.14488 11.2 5.28488 10.43 5.52488 9.71V6.62H1.54488C0.724882 8.24 0.254883 10.06 0.254883 12C0.254883 13.94 0.724882 15.76 1.54488 17.38L5.52488 14.29Z" fill="#FBBC05" />
            <path d="M12.2549 4.75C14.0249 4.75 15.6049 5.36 16.8549 6.55L20.2749 3.13C18.2049 1.19 15.4949 0 12.2549 0C7.56492 0 3.51492 2.7 1.54492 6.62L5.52492 9.71C6.47492 6.86 9.12492 4.75 12.2549 4.75Z" fill="#EA4335" />
          </svg>
          Googleでログイン
        <% end %>
        
      </div>

      <div class="flex items-center justify-center p-2">
        <div class="flex flex-col items-center">
          <p class="p-1 text-center text-base text-gray-500">
            <%= t('.password_forget') %>
            <%= link_to t('.here'), new_password_reset_path, class: 'text-customorange transition duration-100 hover:text-customorange_1 active:text-customorange_1' %>
          </p>
          <p class="text-center text-base text-gray-500">
            <%= t('.member_registration') %>
            <%= link_to t('.here'), new_user_path, class: 'text-customorange transition duration-100 hover:text-customorange_1 active:text-customorange_1' %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>