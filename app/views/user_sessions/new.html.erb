<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8 lg:text-3xl"><%= t('.title') %></h2>

    <%= form_with model: @user, url: login_path, class: 'mx-auto max-w-lg rounded-lg border' do |f| %>
      <div class="flex flex-col gap-4 p-4 md:p-8">
        <div>
          <%= f.label :email, t('.email'), class: 'mb-2 inline-block text-sm text-gray-800 sm:text-base' %>
          <%= f.email_field :email, class: 'w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-customorange ring-opacity-40 transition duration-100 focus:ring', autocomplete: "email" %>
        </div>

        <div>
          <%= f.label :password, t('.password'), class: 'mb-2 inline-block text-sm text-gray-800 sm:text-base' %>
          <%= f.password_field :password, class: 'w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-customorange ring-opacity-40 transition duration-100 focus:ring', autocomplete: "current-password" %>
        </div>

        <%= f.submit t('.login'), class: 'block rounded-lg bg-customred px-8 py-3 mt-3 text-center font-semibold text-white outline-none ring-gray-300 transition duration-100 hover:bg-gray-700 focus-visible:ring active:bg-gray-600 md:text-base' %>
      </div>

      <div class="flex items-center justify-center bg-gray-100 p-2">
        <div class="flex flex-col items-center">
          <p class="p-1 text-center text-base text-gray-500">
            <%= t('.password_forget') %>
            <%= link_to t('.here'), new_password_reset_path, class: 'text-customorange transition duration-100 hover:text-customorange_1 active:text-customorange_1' %>
          </p>
          <p class="text-center text-base text-gray-500">
            <%= t('.member_registration') %>
            <%= link_to t('.here'), new_user_path, class: 'text-customorange transition duration-100 hover:text-customorange_1 active:text-customorange_1' %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>