<div class="overflow-hidden rounded-lg bg-white shadow-md">
  <%= image_tag post.photo_image.url, alt: "お菓子の画像", class: "w-full h-40 object-cover" %>
  <div class="p-2">
      <h3 class="mb-1 text-lg font-semibold"><%= post.name %></h3>
    <div class="mb-1 flex items-center">
    <span class="text-sm text-gray-800 sm:text-base"><%= post.prefecture.name %></span>
    </div>
    <div class="mb-1 flex items-center">
      <span class="mr-2 text-sm text-gray-600 sm:text-base">材料名：</span>
      <span class="text-sm text-gray-800 sm:text-base"><%= post.ingredient.name %></span>
    </div>
    <div class="mb-1 flex items-center">
      <span class="mr-2 text-sm text-gray-600 sm:text-base">製法名：</span>
      <span class="text-sm text-gray-800 sm:text-base"><%= post.cooking_method.name %></span>
    </div>
    <div class="mt-3 flex items-center justify-between">
      <%= link_to "#", class: "bg-pink-500 text-white py-1 px-2 rounded-md hover:bg-pink-600 focus:outline-none focus:ring-2 focus:ring-pink-400" do %>
      <span class="text-xs sm:text-sm">編集</span>
      <% end %> <%= button_to "#", method: :put, class: "bg-red-500 text-white py-1 px-2 rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-400" do %>
      <span class="text-xs sm:text-sm">いいね</span>
      <% end %>
    </div>
  </div>
</div>